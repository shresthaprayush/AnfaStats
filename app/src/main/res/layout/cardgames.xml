<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:id="@+id/matchday"
    android:layout_marginTop="20dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="@drawable/cardbg"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/releativelayoutmatchdate"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtviewmatchdate"
            android:text="3rd July 2018"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-black"
            android:textSize="15sp"
            android:textColor="@color/Titlehome"/>

</RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Linearlayoutteam"
        android:layout_below="@+id/releativelayoutmatchdate"
        android:orientation="horizontal"
        android:weightSum="5">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/Imageviewteam1"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:src="@drawable/anfa"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLength="2"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/Titlehome"
            android:textSize="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/textviewteam1"
            android:text="FC"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="cursive"
            android:textColor="@color/Titlehome"
            android:textSize="30dp"
            android:text="VS"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="60dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLength="2"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/Titlehome"
            android:textSize="40dp"
            android:layout_marginRight="10dp"
            android:text="MC"
            android:id="@+id/textviewteam2"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/anfa"
            android:id="@+id/Imageviewteam2"
            android:layout_marginTop="20dp"
            android:layout_weight="1"/>

    </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Linearlayoutteam">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Stadium"
                android:text="Dasharat Stadium"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/Titlehome"
                android:textSize="15dp"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

    </RelativeLayout>




</android.support.v7.widget.CardView>